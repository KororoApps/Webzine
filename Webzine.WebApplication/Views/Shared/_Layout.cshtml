 @using Bogus
<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/bootstrap-5.3.2-dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-free-6.5.1-web/css/all.min.css" />
    <link rel="stylesheet" href="~/css/app.css" />
    @* Afficher le titre de la page en cours dans l'onglet *@
    <title>@ViewData["title"]</title>
</head>

<body>
    <partial name="_HeaderVuePartielle.cshtml" />

    <div class="container mt-4">

        @* Afficher le titre de la page *@
        <div class="row">
            <div class="@((IsSectionDefined("Sidebar")) ? "col-md-10" : "col-md-12")">
                <div class="row align-text-bottom-center">
                    <h1>@ViewData["titrePage"]</h1>
                    @RenderBody()
                </div>
            </div>

            <div class="@((IsSectionDefined("Sidebar")) ? "col-md-2" : "col-md-0")">
                @RenderSection("Sidebar", required: false)
            </div>
        </div>
        <partial name="_FooterVuePartielle.cshtml" />
        <script src="../lib/bootstrap-5.3.2-dist/js/bootstrap.js"></script>
        <script src="~/lib/bootstrap-5.3.2-dist/js/bootstrap.bundle.min.js"></script>
    </div>
</body>
</html>





