 @using Bogus
<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/bootstrap-5.3.2-dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-free-6.5.1-web/css/all.min.css" />
    <link rel="stylesheet" href="~/css/app.css" />
    @* Afficher le titre de la page en cours dans l'onglet *@
    <title>@ViewData["title"]</title>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark p-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Webzine</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mynavbar">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/"><i class="fa-solid fa-house m-1"></i>Accueil</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#">Administration</a>
                            <ul class="dropdown-menu">
                                <li><a asp-area="Admin" asp-controller="Dashboard" asp-action="" class="text-decoration-none dropdown-item"><i class="fa-solid fa-house m-1"></i>Tableau de bord</a></li>
                                <li><a asp-area="Admin" asp-controller="Artiste" asp-action="" class="text-decoration-none dropdown-item"><i class="fa-solid fa-house m-1"></i>Artistes</a></li>
                                <li><a asp-area="Admin" asp-controller="Commentaire" asp-action="" class="text-decoration-none dropdown-item"><i class="fa-solid fa-house m-1"></i>Commentaires</a></li>
                                <li><a asp-area="Admin" asp-controller="Style" asp-action="" class="text-decoration-none dropdown-item"><i class="fa-solid fa-house m-1"></i>Styles</a></li>
                                <li><a asp-area="Admin" asp-controller="TItre" asp-action="" class="text-decoration-none dropdown-item"><i class="fa-solid fa-house m-1"></i>Titres</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a asp-area="" asp-controller="Contact" asp-action="" class="nav-link text-decoration-none dropdown-item"><i class="fa-solid fa-envelope  m-1"></i>Contact</a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <div class="input-group">
                            <input class="form-control " type="text" placeholder="Trouver un artiste/titre">
                            <button class="btn btn-primary" type="button"><i class="fa-solid fa-search"></i></button>
                        </div>

                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">

        @* Afficher le titre de la page *@
        <div class="row">
            <div class="col-md-10">
                <div class="row align-text-bottom-center">
                    <h1>@ViewData["titrePage"]</h1>
                    @RenderBody()
                </div>
            </div>
            <div class="col-md-2">
                @RenderSection("Sidebar", required: false)
            </div>
        </div>
        <footer class="container-fluid border-top footer">
            &copy; ASP.NET Core - DIIAGE 2023-2024
        </footer>
        <script src="../lib/bootstrap-5.3.2-dist/js/bootstrap.js"></script>
        <script src="~/lib/bootstrap-5.3.2-dist/js/bootstrap.bundle.min.js"></script>
    </div>
    </div>
</body>
</html>





