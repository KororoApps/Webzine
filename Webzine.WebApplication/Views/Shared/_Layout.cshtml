 @using Bogus
<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/bootstrap-5.3.2-dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-free-6.5.1-web/css/all.min.css" />
    <link rel="stylesheet" href="~/css/app.css" />
    @* Afficher le titre de la page en cours dans l'onglet *@
    <title>@ViewData["title"]</title>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top pt-2">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Webzine</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mynavbar">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house m-1"></i>Accueil</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#">Administration</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><i class="fa-solid fa-house m-1"></i>Tableau de bord</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Artiste" asp-action="Index"><i class="fa-solid fa-users m-1"></i>Artistes</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Commentaire" asp-action="Index"><i class="fa-solid fa-comment m-1"></i>Commentaires</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Style" asp-action="Index"><i class="fa-solid fa-tags m-1"></i>Styles</a></li>
                                <li><a class="dropdown-item" asp-area="Admin" asp-controller="Titre" asp-action="Index"><i class="fa-solid fa-music m-1"></i>Titres</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"  asp-controller="Contact" asp-action="Index"><i class="fa-solid fa-envelope  m-1"></i>Contact</a>
                        </li>
                    </ul>
                    <form class="d-flex">
                        <div class="input-group">
                            <input class="form-control " type="text" placeholder="Trouver un artiste/titre">
                            <button class="btn btn-primary" type="button"><i class="fa-solid fa-search"></i></button>
                        </div>

                    </form>
                </div>
            </div>
        </nav>

    </header>

    <div class="container-fluid">

        <div class="row">
            <div class="col-md-9 p-5">
                @* Afficher le titre de la page *@
                
                <h1>@ViewData["titrePage"]</h1>
                @RenderBody()
            </div>

                <div class="col-md-3 p-5 ">
                <div class="position-sticky" style="top: 2rem;">
                    <div class="p-2 ">
                        <h2 class="">A propos</h2>
                        <p class="mb-0">Retrouver les dernières pépitres sur notre webzine</p>
                    </div>

                    <div class="p-2">
                        <h3>Styles</h3>
                        @{
                            var faker = new Faker();
                            var nombreMots = 20;
                        }
                        <ul class="mb-0">

                            @for (var i = 0; i < nombreMots; i++)
                            {
                                var motAleatoire = faker.Lorem.Word();
                                <li><a href="#">@motAleatoire</a></li>
                            }
                        </ul>
                    </div>


                </div>
            </div>
           


        
        <footer class="container-fluid border-top footer">
            &copy; ASP.NET Core - DIIAGE 2023-2024
        </footer>
        <script src="../lib/bootstrap-5.3.2-dist/js/bootstrap.js"></script>
        <script src="~/lib/bootstrap-5.3.2-dist/js/bootstrap.bundle.min.js"></script>
</body>



</html>


