@model Webzine.WebApplication.Shared.ViewModels.GroupeTitreModel

@{
    ViewData["title"] = "Accueil";
}
@section Sidebar {
    @await Component.InvokeAsync("LayoutSideBar")
}

<h1>Derniers titres chroniqués</h1>

@*Affiche 3 titres*@
@foreach (var titre in Model.Titres.OrderBy(t => Guid.NewGuid()).Take(3))
{
    <div class="container">
        <div class="row">
            <div class="card border-0 p-4">
                <div class="row g-0">
                    <!-- Image à gauche, contenu à droite sur les grands écrans -->
                    <div class="col-sm-3 col-lg-2">
                        <a href="/Titre/" class="ratio ratio-1x1">
                            <img class="card-img-top w-100 h-100 example-card-img-responsive p-3 object-fit-cover" src="@titre.UrlJaquette" alt="Image de la carte">
                        </a>
                    </div>
                    <div class="col-sm-9 col-lg-10">
                        <div class="card-body">
                            <h4 class="card-title">
                                <span>
                                    <a asp-area="" asp-controller="Artiste" asp-action="" class="text-decoration-none">
                                        @titre.Artiste.Nom
                                    </a>
                                </span>
                                <span class=" text-primary">
                                    -
                                </span>
                                <span>
                                    <a asp-area="" asp-controller="Titre" asp-action="" class="text-decoration-none">
                                        @titre.Libelle
                                    </a>
                                </span>
                            </h4>
                            <p class="card-text">@titre.Chronique.Substring(0, Math.Min(200, titre.Chronique.Length))...</p>
                            <div class="d-flex">
                                <a class="btn btn-primary btn-sm mb-2 mb-sm-0 me-sm-2 mb-sm-0 me-sm-2text-decoration-none" asp-area="" asp-controller="Titre" asp-action="">
                                    Lire la suite
                                </a>
                                <p class="mb-0"><i class="fa-solid fa-calendar p-2"></i>@titre.DateCreation.ToString("dd/MM/yyyy HH:mm:ss")</p>
                                <p class="mb-0">
                                    <i class="fa-solid fa-tags p-2"></i>
                                    @foreach (var style in @titre.Styles)
                                    {
                                        <a asp-area="" asp-controller="Titre" asp-action="Style" class="text-decoration-none">
                                            @style.Libelle
                                        </a>
                                        <span> </span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="d-flex  justify-content-end">
    <a class="btn btn-secondary p-2 m-4" href="/">Titres plus anciens >></a>
</div>

@*Affiche 3 titres*@
<div>
    <h1>Titres les plus populaires</h1>

    <div class="container">
        <div class="row">
            @foreach (var titre in Model.Titres.OrderBy(t => Guid.NewGuid()).Take(3))
            {
                <div class="col-12 col-sm-12 col-md-4 mt-5">
                    <a href="/Titre/" class="text-decoration-none">
                        <div class="card">
                            <div class="ratio ratio-1x1">
                                <img src="@titre.UrlJaquette" class="card-img-top w-100 h-100 object-fit-cover" alt="image">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title text-primary">@titre.Libelle</h5>
                                <p class="card-text">par <span class=" text-primary">@titre.Artiste.Nom</span></p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>


