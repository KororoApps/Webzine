@model Webzine.WebApplication.Shared.ViewModels.GroupeTitreModel

@*Affiche 3 titres*@
@foreach (var titre in Model.ParutionChroniqueTitre)
{
    <div class="container">
        <div class="row">
            <div class="card border-0 p-4">
                <div class="row g-0 bg-light">
                    <div class="col-sm-3 col-lg-2">
                        <a asp-area="" asp-controller="Titre" asp-action="" asp-route-id="@titre.IdTitre">
                            <img src="@titre.UrlJaquette" class="card-img-top w-100 h-100 example-card-img-responsive p-3 object-fit-cover" alt="image">                            
                        </a>
                    </div>
                    <div class="col-sm-9 col-lg-10">
                        <div class="card-body">
                            <h4 class="card-title">
                                <span>
                                    <a asp-area="" asp-controller="Artiste" asp-action="" asp-route-id="@titre.Artiste.IdArtiste">
                                        @titre.Artiste.Nom
                                    </a>
                                </span>
                                <span class=" text-primary">
                                    -
                                </span>
                                <span>
                                    <a asp-area="" asp-controller="Titre" asp-action="" asp-route-id="@titre.IdTitre">
                                        @titre.Libelle
                                    </a>
                                </span>
                            </h4>
                            @*Lire la suite, Date de l'article, Styles*@
                            <p class="card-text">@titre.Chronique.Substring(0, Math.Min(Model.MaxDescriptionTitre, titre.Chronique.Length))...</p>
                            <div class="d-flex">
                                <a class="btn btn-primary btn-sm mb-2 mb-sm-0 me-sm-2 mb-sm-0 me-sm-2" asp-area="" asp-controller="Titre" asp-action="" asp-route-id="@titre.IdTitre">
                                    Lire la suite
                                </a>
                                <p class="mb-0">
                                    <i class="fa-solid fa-calendar ps-3"></i>
                                    @titre.DateCreation.ToString("dd/MM/yyyy HH:mm:ss")
                                </p>
                                <p class="mb-0">
                                    <i class="fa-solid fa-tags ps-3"></i>

                                    @foreach (var style in titre.Styles)
                                    {
                                        <a asp-area="" asp-controller="Titre" asp-action="Style" asp-route-id="@style.Libelle">
                                            @style.Libelle
                                        </a>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="d-flex  justify-content-end">
    @if(Model.NumeroPage > 0)
    {
        <a class="btn btn-secondary p-2 m-4" asp-area="" asp-controller="Home" asp-action="Index" asp-route-NumeroPage="@(Model.NumeroPage - 1)">
            &lt;&lt; Titres plus récents
        </a>
    }
    
    <a class="btn btn-secondary p-2 m-4" asp-area="" asp-controller="Home" asp-action="Index" asp-route-NumeroPage="@(Model.NumeroPage + 1)">
        Titres plus anciens >>
    </a>
</div>