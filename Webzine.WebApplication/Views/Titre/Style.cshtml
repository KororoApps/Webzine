@model Webzine.WebApplication.Shared.ViewModels.GroupeTitreModel

@*Configuration dynamique du nom de l'onglet.*@
@{
    ViewData["title"] = "Titres par style";
}
@section Sidebar {
    @await Component.InvokeAsync("LayoutSideBar")
}


@*Affichage du nom de la page.*@
@foreach (var titre in Model.Titres)
{
    foreach (var style in titre.Styles)
    {
        ViewData["titrePage"] = "Titres ayant le style " + style.Libelle;
    }
}
<hr />

@*Afifchage des titres*@
@foreach (var titre in Model.Titres)
{
    <div class="row mb-3" style="margin-left: 10px">
        <div class="col-md-1" style="display: flex; justify-content: center; align-items: center">
            <img src="@titre.UrlJaquette" alt="Image" class="img-fluid custom-shape">
        </div>
        <div class="col-md-6 mt-1">
            <a asp-controller="Titre" asp-action="" class="text-decoration-none">@titre.Artiste.Nom - @titre.Libelle</a>
            <p>@titre.Duree.ToString(@"mm\:ss")</p>
        </div>
    </div>
}