@model Webzine.WebApplication.Shared.ViewModels.TitreModel

<div class="mt-5">
    <h3>Donne ton avis sur le titre</h3>

    <form method="post" asp-controller="titre" asp-action="commenter" class="d-flex">
        <div class="container">
            <input type="hidden" asp-for="@Model.Titre.IdTitre" name="IdTitre" />
            <div class="form-group row mb-5">
                <div class="col-md-2">
                    <label asp-for="@Model.Commentaire.Auteur" class="form-label required-label"></label>
                </div>
                <div class="col-md-10">
                    <input asp-for="@Model.Commentaire.Auteur" class="form-control" id="nameInput" placeholder="Votre nom (exemple : Emmanuel)" required>
                    <span asp-validation-for="@Model.Commentaire.Auteur" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-5">
                <div class="col-md-2">
                    <div class="col-md-2">
                        <label asp-for="@Model.Commentaire.Contenu" class="form-label required-label"></label>
                    </div>
                    <div class="col-md-10">
                        <textarea asp-for="@Model.Commentaire.Contenu" placeholder="Votre commentaire..." class="form-control custom-textarea" id="commentsInput" required></textarea>
                        <span asp-validation-for="@Model.Commentaire.Contenu" class=" text-danger"></span>
                    </div>
                </div>
            </div>

            @*Bouton d'ajout du titre.*@
            <div class="form-group row mb-5">
                <div class="col-md-2">
                </div>
                <div class="col-md-10">
                    <div>
                        <button type="submit" class="btn btn-primary">Envoyer</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>