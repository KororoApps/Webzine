@model Webzine.WebApplication.Shared.ViewModels.ArtisteModel
@{
    Layout = "_Layout";
}
<h3>@Model.Nom</h3>
<hr>
<p>@Model.Bio</p>
<h1>Titres</h1>
<hr>
@foreach (var titre in Model.Titres)
{
    <div class="row" style="margin-left: 10px">
        <!-- Réduisez l'espacement entre les lignes -->
        <div class="col-md-1" style="display: flex; justify-content: center; align-items: center">
            <img src="@titre.UrlJaquette" alt="Image" class="img-fluid custom-shape">
        </div>
        <div class="col-md-6 mt-1">
            <!-- Réduisez la marge supérieure -->
            <h2>@titre.Libelle</h2>
            <p>@titre.Duree.ToString(@"mm\:ss")
            </p>
        </div>
    </div>
}
