@model Webzine.WebApplication.Shared.ViewModels.ArtisteModel

@*Configuration dynamique du nom de l'onglet.*@
@{
    ViewData["title"] = "Supprimer un artiste";
}

@*Affichage du nom de la page.*@
@{
    ViewData["titrePage"] = "Supprimer un artiste";
}
<hr />

<div>
    <div>
        <p>Etes-vous sûr de vouloir supprimer l'artiste "@Model.Artiste.Nom" ? </p>

        @* Formulaire pour soumettre la demande de suppression *@
        <form method="post" asp-action="DeleteConfirmed" asp-controller="Artiste">
            @* Utilisez un champ anti-forgery pour protéger le formulaire *@
            @Html.AntiForgeryToken()

            <button type="submit" class="btn btn-danger mb-5">
                Supprimer
            </button>
        </form>
    </div>

    @*Lien vers le retour à l'administration du artiste.*@
    <div>
        <a class=" fw-normal" asp-area="Admin" asp-controller="Artiste" asp-action="Index">
            Retour à l'administration des artistes
        </a>
    </div>
</div>