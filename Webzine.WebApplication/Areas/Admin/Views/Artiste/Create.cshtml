@model Webzine.WebApplication.Shared.ViewModels.ArtisteModel

@*Configuration dynamique du nom de l'onglet.*@
@{
    ViewData["title"] = "Créer un artiste";
}

@*Affichage du nom de la page.*@
@{
    ViewData["titrePage"] = "Créer un artiste";
}
<hr />

@*Formulaire de création de l'artiste.*@
<form asp-area="Admin" asp-controller="Artiste" asp-action="Create" method="post" class="d-flex">
    <div class="container">
        <div class="form-group row mb-5">
            <div class="col-md-2">
                <label asp-for="Artiste.Nom" class="form-label"></label><span class="text-danger">*</span>
            </div>
            <div class="col-md-10">
                <input asp-for="Artiste.Nom" type="text" class="form-control">
            </div>
        </div>
        <div class="form-group row mb-5">
            <div class="col-md-2">
                <label asp-for="Artiste.Biographie" class="form-label"></label><span class="text-danger">*</span>
            </div>
            <div class="col-md-10">
                <textarea asp-for="Artiste.Biographie" type="text" class="form-control"></textarea>
            </div>
        </div>

        @*Bouton d'ajout de l'artiste.*@
        <div class="form-group row mb-5">
            <div class="col-md-2">
            </div>
            <div class="col-md-10">
                <div>
                    <a class="btn btn-primary m-4" href="#">Créer</a>
                </div>
            </div>
        </div>

        @*Bouton de retour à l'adminitration des artistes..*@
        <a class="text-decoration-none fw-normal" asp-area="Admin" asp-controller="Artiste" asp-action="Index">Retour à l'administration des artistes </a>
    </div>
</form>
