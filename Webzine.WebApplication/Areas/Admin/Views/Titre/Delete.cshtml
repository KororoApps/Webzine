@model Webzine.WebApplication.Shared.ViewModels.TitreModel

@*Configuration dynamique du nom de l'onglet.*@
@{
    ViewData["title"] = "Supprimer un titre";
}

@*Affichage du nom de la page.*@
@{
    ViewData["titrePage"] = "Supprimer un titre";
}
<hr />

<div>
    <div>
        <p>Etes-vous sûr de vouloir supprimer le titre "@Model.Titre.Libelle"" de @Model.Titre.Artiste.Nom ? </p>

        @* Formulaire pour soumettre la demande de suppression *@
        <form method="post" asp-action="DeleteConfirmed" asp-controller="Titre">
            @* Utilisez un champ anti-forgery pour protéger le formulaire *@
            @Html.AntiForgeryToken()

            <button type="submit" class="btn btn-danger mb-5">
                Supprimer
            </button>
        </form>
    </div>

    @*Lien vers le retour à l'administration du titre.*@
    <div>
        <a class=" fw-normal" asp-area="Admin" asp-controller="Titre" asp-action="Index">
            Retour à l'administration des titres
        </a>
    </div>
</div>