@model Webzine.WebApplication.Shared.ViewModels.TitreModel

@*Configuration dynamique du nom de l'onglet.*@
@{
    ViewData["title"] = "Supprimer un titre";
}

@*Affichage du nom de la page.*@
@{
    ViewData["titrePage"] = "Supprimer un titre";
}
<hr />

<div>
    <div>
        <p>Etes-vous sûr de vouloir supprimer le titre "@Model.Titre.Libelle"" de @Model.Titre.Artiste.Nom ? </p>

        @*Bouton de suppression*@
        <button type="button" class="btn btn-danger mb-5">Supprimer</button>
    </div>

    @*Lien vers le retour à l'administration du titre*@
    <div>
        <a class="text-decoration-none fw-normal" asp-area="Admin" asp-controller="Titre" asp-action="Index">Retour à l'administration des titres</a>
    </div>
</div>