@model Webzine.WebApplication.Shared.ViewModels.GroupeStyleModel

@*Configuration dynamique du nom de l'onglet.*@
@{
    ViewData["title"] = "Liste des styles";
}

@*Affichage du nom de la page.*@
@{
    ViewData["titrePage"] = "Styles";
}
<hr />

<div class="container">

    @*Création du bouton "Ajouter un nouveau style.*@
    <a asp-area="Admin" asp-controller="Style" asp-action="Create" class="btn btn-primary mb-4">
        <i class="fa-solid fa-plus button"></i>
        Ajouter un nouveau style
    </a>

    @*Afficher la liste des styles.*@
    <table class="table table-striped table-bordered">

        <thead>
            <tr class="table-secondary custom-no-border">
                <th scope="col">Libellé</th>
                <th scope="col" class="col-md-1">Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var style in Model.Styles)
            {
                <tr>
                    <td>@style.Libelle</td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center">
                            <a asp-area="Admin" asp-controller="Style" asp-action="Edit" asp-route-id="@style.IdStyle">
                                <i class="fa-solid fa-edit text-primary p-1 icone"></i>
                            </a>
                            <a asp-area="Admin" asp-controller="Style" asp-action="Delete" asp-route-id="@style.IdStyle">
                                <i class="fa-solid fa-trash text-primary p-1 icone"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="d-flex  justify-content-end">
    @if (Model.NumeroPage >= 0)
    {
        <a class="btn btn-secondary p-2 m-4" asp-area="Admin" asp-controller="Style" asp-action="Index" asp-route-NumeroPage="@(Model.NumeroPage - 1)">
            &lt;&lt; Plus de styles
        </a>
    }

    <a class="btn btn-secondary p-2 m-4" asp-area="Admin" asp-controller="Style" asp-action="Index" asp-route-NumeroPage="@(Model.NumeroPage + 1)">
        Plus de styles >>
    </a>
</div>



