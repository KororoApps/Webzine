@model Webzine.WebApplication.Shared.ViewModels.StyleModel

@*Configuration dynamique du nom de l'onglet.*@
@{
    ViewData["Title"] = "Editer un style";
}

@*Affichage du nom de la page.*@
@{
    ViewData["titrePage"] = "Editer un style";
}
<hr />

@*Formulaire d'ajout d'un style.*@
<form asp-area="Admin" asp-controller="Style" asp-action="Edit" method="post" class="col-6 d-flex">
    <div class="container">
        <div class="row align-items-center mb-5">
            <div class="col-auto">
                <label asp-for="@Model.Style.Libelle" class="form-label"></label><span class="text-danger">*</span>
            </div>
            <div class="col">
                <input asp-for="@Model.Style.Libelle" type="text" class="form-control" placeholder="@Model.Style.Libelle">
            </div>

            @*Bouton d'ajout du style.*@
            <div class="col-auto">
                <a class="btn btn-primary" href="#">Sauvegarder</a>
            </div>
        </div>
        
        @*Bouton de retour à l'adminitration des styles.*@
        <a class="text-decoration-none fw-normal" asp-area="Admin" asp-controller="Style" asp-action="Index">Retour à l'administration des styles </a>
    </div>
</form>
