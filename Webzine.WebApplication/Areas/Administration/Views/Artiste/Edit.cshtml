@model Webzine.WebApplication.Shared.ViewModels.ArtisteModel

@*Configuration dynamique du nom de l'onglet.*@
@{
    ViewData["title"] = "Editer un artiste";
}

@*Affichage du nom de la page.*@
@{
    ViewData["titrePage"] = "Editer un artiste";
}
<hr />

@*Formulaire d'édition de l'artiste*@
<form method="post" asp-action="edit" asp-controller="artiste" class="d-flex">
    <input type="hidden" asp-for="@Model.Artiste.IdArtiste" />
    <div class="container">
        <div class="form-group row mb-5">
            <div class="col-md-2">
                <label asp-for="@Model.Artiste.Nom" class="form-label required-label"></label>
            </div>
            <div class="col-md-10">
                <input asp-for="@Model.Artiste.Nom" type="text" class="form-control">
                <span asp-validation-for="Artiste.Nom" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-5">
            <div class="col-md-2">
                <label asp-for="@Model.Artiste.Biographie" class="form-label"></label>
            </div>
            <div class="col-md-10">
                <textarea asp-for="@Model.Artiste.Biographie" type="text" class="form-control"></textarea>
            </div>
        </div>

        @*Bouton d'édition de l'artiste.*@
        <div class="form-group row mb-5">
            <div class="col-md-2">
            </div>
            <div class="col-md-10">
                <button type="submit" class="btn btn-primary mb-5">
                    Sauvegarder
                </button>
            </div>
        </div>

        @*Bouton de retour à l'Administrationitration des aristes.*@
        <a class=" fw-normal" asp-area="administration" asp-controller="artiste" asp-action="index">
            Retour à l'Administrationistration des artistes
        </a>
    </div>
</form>


