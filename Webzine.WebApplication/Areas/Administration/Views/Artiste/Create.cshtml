@model Webzine.WebApplication.Shared.ViewModels.ArtisteModel

@*Configuration dynamique du nom de l'onglet.*@
@{
    ViewData["title"] = "Créer un artiste";
}

@*Affichage du nom de la page.*@
@{
    ViewData["titrePage"] = "Créer un artiste";
}
<hr />

@*Formulaire de création de l'artiste.*@
<form method="post" asp-action="create" asp-controller="artiste" class="d-flex">
    <div class="container">
        <div class="form-group row mb-5">
            <div class="col-md-2">
                <label asp-for="Artiste.Nom" class="form-label required-label"></label>
            </div>
            <div class="col-md-10">
                <input asp-for="Artiste.Nom" class="form-control">
                <span asp-validation-for="Artiste.Nom" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row mb-5">
            <div class="col-md-2">
                <label asp-for="Artiste.Biographie" class="form-label"></label>
            </div>
            <div class="col-md-10">
                <textarea asp-for="Artiste.Biographie" class="form-control"></textarea>
            </div>
        </div>

        @*Bouton d'ajout de l'artiste.*@
        <div class="form-group row mb-5">
            <div class="col-md-2">
            </div>
            <div class="col-md-10">
                <div>
                    <button type="submit" class="btn btn-primary mb-5">
                        Créer
                    </button>
                </div>
            </div>
        </div>

        @*Bouton de retour à l'Administrationitration des artistes.*@
        <a class=" fw-normal" asp-area="administration" asp-controller="artiste" asp-action="index">
            Retour à l'Administrationistration des artistes
        </a>
    </div>
</form>
